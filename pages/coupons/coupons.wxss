/* pages/coupons/coupons.wxss */
.header{
    height:344rpx;
    background:#000;
}
.header .box{
    display:flex;
    align-items:center;
    justify-content: space-between;
    padding:54rpx 24rpx;
}
.header .mygt{
    width:20rpx;
    height:20rpx;
    border:8rpx solid #fff;
    transform:rotate(45deg);
    border-top:0;
    border-right:0
}
.header .coupons{
    width:160rpx;
}
.header .info{
    width:40rpx
}
.header .info-num{
    position: relative;
    top:-10rpx;
    left:-35rpx;
    font-size:14px;
    font-weight:600
}
.main{
    position: relative;
}
.main .position-box{
    position: absolute;
    top:-120rpx;
    left:0;
}
.main .active-vol{  
    padding:15rpx 45rpx;
}
.main .vol{
    width:660rpx;
    height:166rpx;
    background:#333;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color:#fff;
    font-size:20px;
    margin:10rpx 0;
}
.main .vol .title{
    display: flex;
    flex-direction: column
}
.main .vol .title text:last-child{
    color:#ddd;
    font-size:16px
}
.main .vol .price{
    font-size:30px;
    border-left:1rpx solid #c6c5c5;
    padding:20rpx 0 20rpx 30rpx
}
.main .failure-vol{
    padding:15rpx 45rpx;
}
.main .failure-vol .fail-bg{
    background:#aaa
}
.main .failure-vol .fail-title{
    display: flex;
    color:#aaa;
    font-size:16px;
    margin-bottom:30rpx;
    align-items:center;
    justify-content: space-between;
    flex-wrap: nowrap;
}
.main .failure-vol .fail-title .left-line,.main .failure-vol .fail-title .right-line{
    display: inline-block;
    border-bottom:1rpx dotted #aaa;
    width:30%;
}
.main .emp{
    display:flex;
    justify-content: flex-end;
    align-items: center;
    font-size:14px;
    padding:20rpx 45rpx
}
.main .emp image{
    width:30rpx;
    margin-right:5rpx;
}

/**modal**/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  
  .modal-dialog {
    width: 480rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 135rpx;
  }
  
  .modal-title {
    padding: 60rpx 0;
    font-size: 34rpx;
    color: #030303;
    text-align: center;
  }
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 28rpx;
    line-height: 86rpx;
    background:#434343;
    padding:5rpx
  }
  
  .btn-cancel {
    width: 50%;
    color: #f8f8f8;
    text-align: center;
    border-right: 1px solid #ccc;
  }
  
  .btn-confirm {
    width: 50%;
    color: #f8f8f8;
    text-align: center;
  }
  